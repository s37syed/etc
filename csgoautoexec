// Minimal AutoExec Config for CS:GO
// Optimized for Generic Keyboard and Logitech G700s Mouse
// DPI - 550
// In Game Sensitivity - 1.57
// Windows Tick - 6
// by Skywalk3r


//Enable voice by default
voice_enable 1

//Switch to Primary Weapon to Secondary Weapon and vice versa
bind "Q" "invnextnongrenade"

//Zoom in Radar 
bind "E" "+radar"
alias "+radar" "+use; cl_radar_always_centered 0; cl_radar_scale 0.30"
alias "-radar" "-use; cl_radar_always_centered 1; cl_radar_scale 0.60"


//Show net graph information when viewing scoreboard
net_graph "1"
net_graphheight "9999"
bind "TAB" "+scorenet"
alias "+scorenet" "+showscores; net_graphheight 0"
alias "-scorenet" "-showscores; net_graphheight 9999"

//Disable 'use item' key for buy menu
cl_use_opens_buy_menu 0

//Zoom sensitivity
zoom_sensitivity_ratio_mouse 0.76

//Writing config *NEEDED*
host_writeconfig

//Disable Auto Weapon Switch
cl_autowepswitch 0

//Buffer delay
snd_mixahead "0.05"

//Toggle voice
bind "v" "toggle voice_enable"

cl_crosshairsize 4
cl_crosshairstyle 3
cl_crosshairgap -18
cl_crosshairthickness 1 
cl_crosshair_drawoutline 1

//Switch from PTT to Toggle Voice On/Off
alias voiceon "+voicerecord; bind f voiceoff"
alias voiceoff "-voicerecord; bind f voiceon"
bind "f" "voiceon"

//Default: PTT
bind "f" "+voicerecord"
